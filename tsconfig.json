{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./build",
    "target": "es2017",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "inlineSources": true,
    "isolatedModules": true,
    "allowJs": true,
    // "noResolve": true,
    "skipLibCheck": true,
    "lib": [
      "es5",
      "es6"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ]
}
